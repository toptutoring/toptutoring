<%= form_for [:tutors, @invoice] do |f| %>
  <div class="form-group">
    <%= f.label :student_id %>
    <%= f.select(:student_id, options_for_select(@students.map{ |student| [student.name, student.id, { 'data-tutor-type' => student.assignment.subject }] }, @invoice.student_id), { :class => "student-select" }, :required => true)%>
  </div>

  <div class="form-group">
    <%= f.label :subject %>
    <span class="form-info invoice-tutor-type">
      <%= @invoice.student.assignment.subject if @invoice.student.present? %>
    </span>
  </div>

  <div class="form-group">
    <%= f.number_field :hours, class:"form-control", required: true, min:"0.5", pattern: "[0-9]", step: "0.5", placeholder: "Hours"%>
  </div>

  <div class="form-group">
    <%= f.text_field :description, class:"form-control", placeholder: "Description" %>
  </div>

  <br />
  <div class="text-center">
    <button type="submit" class="btn btn-outline btn-blue">Submit</button>
  </div>
<% end %>