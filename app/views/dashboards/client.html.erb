<%= render "menu" %>
<% unless current_user.enabled? %>
  <%= render "new_user_message" %>
<% end %>
<% if current_user.enabled? %>
  <% if !current_user.is_student? && current_user.students.first.engagement&.pending? %>
    <%= render "student_pending_engagement_message" %>
  <% end %>
  <% if current_user.is_student? && current_user.engagement&.pending? %>
    <%= render "pending_engagement_message" %>
  <% end %>
<% end %>
