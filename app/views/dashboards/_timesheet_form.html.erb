<div class="col-md-6 center-block invoice-form">
  <div class="col-md-12">
    <div class="widget">
      <div class="widget-heading clearfix">
        <h3 class="widget-title text-center">Top Tutoring Time Sheet</h3>
        <p class="widget-hint pull-left">Use this form to log hours you spent working for Top Tutoring</p>
      </div>
      <div class="widget-body">

        <%= form_for [:tutors, @invoice], :html => { class: "form-horizontal" } do |f| %>

          <div class="form-group">
            <%= f.label :hours, class: "col-md-3 col-sm-3 control-label" %>
            <div class="col-md-9 col-sm-9">
              <%= f.number_field(:hours, in: 1.00..8.00, step: 0.25) %>
            </div>
          </div>

          <div class="form-group">
            <label for="subject" class="col-md-3 col-sm-3 control-label">Date Worked</label>
            <div class="col-md-9 col-sm-9">
            <%= f.date_field(:subject, class: "input-date", require: "required") %>
            </div>
          </div>

          <div class="form-group mb-30">
            <label for="description" class="col-md-3 col-sm-3 control-label">Description</label>
            <div class="col-md-9 col-sm-9 mb-20">
              <%= f.text_area :description, rows: 4, class: "form-control", placeholder: "Please give a short description of the work that was done.", required: "required" %>
            </div>
          </div>

          <%= f.submit %>
        <% end %>

      </div>
    </div>
  </div>
</div>
