<div class="widget">
  <div class="widget-heading clearfix">
    <h3 class="widget-title pull-left">Your clients</h3>
  </div>
  <div class="widget-body">
    <div class="table-responsive">
      <table class="table mb-0">
        <thead>
          <tr>
            <th>Student Name</th>
            <th class="text-center">Subject</th>
            <th class="text-center">Academic Type</th>
            <th class="text-center">Status</th>
            <th class="text-center">Credit</th>
          </tr>
        </thead>
        <tbody>
          <% @tutor_engagements.each do |engagement| %>
            <tr>
              <td><%= engagement.student_name %></td>
              <td class="text-center"><%= engagement.subject.name %></td>
              <td class="text-center"><%= engagement.academic_type.humanize %></td>
              <td class="text-center"><span class="label label-outline label-warning"><%= engagement.state %></span></td>
              <% if engagement.academic? %>
                <td class="text-center"><%= engagement.client.academic_credit %> hrs</td>
              <% else %>
                <td class="text-center"><%= engagement.client.test_prep_credit %> hrs</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
