<div class="row">
  <div class="col-md-12">
    <div class="widget">
      <div class="widget-heading clearfix">
        <h3 class="widget-title pull-left">Pending Engagements</h3>
      </div>
      <div class="widget-body">
        <div class="table-responsive">
          <table class="table mb-0">
            <thead>
              <tr>
                <th>Student Name</th>
                <th>Client Name</th>
                <th>Phone Number</th>
                <th>Subject</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @pending_engagements.each do |engagement| %>
                <tr id="engagement_<%= engagement.id %>">
                  <td>
                    <%= engagement_state_label(engagement) %>
                    <%= engagement.student_name %>
                  </td>
                  <td><%= engagement.client.full_name %></td>
                  <td><%= phone_number_display(engagement.client) %></td>
                  <td><%= engagement.subject.name %></td>
                  <td><% actions_for_engagement(engagement) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
