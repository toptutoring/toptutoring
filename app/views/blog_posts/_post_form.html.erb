<div class="section">
  <%= form_for @post do |f| %>
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :publish_date %>
        <%= f.date_field :publish_date, min: Date.current, class: "form-control" %>
      </div>
    </div>

    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, rows: 10, class: "form-control" %>
      </div>
    </div>

    <%= f.submit class: "center-block btn btn-primary" %>
  <% end %>
</div>
