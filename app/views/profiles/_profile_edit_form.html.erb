<div class="col-md-6 col-md-offset-3">
  <div class="widget">
    <div class="widget-heading clearfix">
      <h3 class="widget-title pb-10 text-center">Edit Your Profile</h3>
    </div>
    <div class="widget-body">
      <%= form_for current_user, url: profile_path, html: { class: "form-horizontal" } do |f| %>

        <div class ="form-group form-group-lg">
          <div class ="col-lg-4 text-right">
            <%= f.label(:first_name, class: "control-label") %>
          </div>
          <div class="col-lg-8">
            <%= f.text_field :first_name, class: "form-control input-lg", required: true %>
          </div>
        </div>

        <div class ="form-group form-group-lg">
          <div class ="col-lg-4 text-right">
            <%= f.label(:last_name, class: "control-label") %>
          </div>
          <div class="col-lg-8">
            <%= f.text_field :last_name, class: "form-control input-lg", required: true %>
          </div>
        </div>

        <div class ="form-group form-group-lg">
          <div class ="col-lg-4 text-right">
            <%= label_tag(:phone_number, "Phone Number", class: "control-label") %>
          </div>
          <div class="col-lg-8">
            <%= f.text_field :phone_number, class: "form-control input-lg", required: true %>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
