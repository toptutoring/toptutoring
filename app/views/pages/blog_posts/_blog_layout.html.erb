<section>
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <%= yield %>
      </div>

      <div class="col-md-3 hidden-sm">
        <div class="widget">
          <h6 class="title">Blog Categories</h6>
          <hr>
          <ul class="link-list">
            <% BlogCategory.all.each do |category| %>
              <li>
                <%= link_to category.name.titlecase, "#" %>
              </li>
            <% end %>
          </ul>
        </div>
        <!--end of widget-->

        <div class="widget">
          <h6 class="title">Recent Posts</h6>
          <hr>
          <ul class="link-list recent-posts">
            <% (@posts || BlogPost.all).last(4).each do |post| %>
              <li>
                <%= link_to post.title, pages_blog_post_path(post.slug) %>
                <span class="date"><%= l post.publish_date, format: :default %></span>
              </li>
            <% end %>
          </ul>
        </div>
        <!--end of widget-->
      </div>
    </div>
  </div>
</section>
