document.getElementById("payment_section").style.visibility = "visible";

var product = document.getElementById("product-"+ <%= @count %>);
var amount = document.getElementById("low_balance_hours-"+ <%= @count %>);

document.getElementById("amount").value = parseInt(product.textContent);
document.getElementById("hours").value = amount.value;
set_academic_type_dropdown();

function set_academic_type_dropdown() {
  var academicTypeDropdown = document.getElementsByClassName("payment-academic-type")[0];
  var event = new Event('change');

  if("<%= @invoice.engagement.academic_type %>" == "Academic") {
    academicTypeDropdown.selectedIndex = "0";
    academicTypeDropdown.dispatchEvent(event);
  }
  else {
    academicTypeDropdown.selectedIndex = "1";
    academicTypeDropdown.dispatchEvent(event);
  }
}
