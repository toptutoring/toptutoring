<%= form_with model: Payment.new, url: one_time_payment_path, class: "stripe_form" do |f| %>
  <!--  Credit Card Inputs -->
  <div class="row flex">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="widget">
        <div class="widget-heading">
          <h3 class="widget-title">One Time Payments</h3>
        </div>
        <div class="widget-body">
          <div class="widget-content">
            <div class="row mb-20">
              <div class="col-xs-3 text-right">
                <%= f.label :payer_email, "Email" %>
              </div>
              <div class="col-xs-9">
                <%= f.email_field :payer_email, class: "form-control", required: true %>
              </div>
            </div>

            <div class="row mb-20">
              <div class="col-xs-3 text-right">
                <%= f.label :amount %>
              </div>
              <div class="col-xs-9 col-sm-4">
                <div class="input-group">
                  <span class="input-group-addon">$</span>
                  <%= f.number_field :amount, min: 1, step: 1, class: "form-control text-right", required: true %>
                  <span class="input-group-addon">.00</span>
                </div>
              </div>
            </div>

            <div class="row mb-20">
              <div class="col-xs-3 text-right">
                <%= f.label :description %>
              </div>
              <div class="col-xs-9">
                <%= f.text_area :description, rows: 3, class: "form-control", required: true %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-md-6 col-md-offset-3 p=10">
      <div class="widget">
        <div class="widget-heading">
          <h3 class="widget-title">Credit Card Information</h3>
        </div>
        <div class="widget-body">
          <div class="widget-content">

            <%= check_box_tag :use_new_card, "true", true, class: "hidden" %>
            <%= render "clients/payments/card_parameters", div_class: "show", save_card_option: false %>
            <div class="row m-0">
              <!-- button disabling is handled by javascript because Stripe validation requires javascript -->
              <%= submit_tag "Purchase Hours", class: "pull-right btn btn-primary", data: { disable_with: false } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

