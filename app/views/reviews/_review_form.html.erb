<%= form_for review, url: create_review_path(reviewer.unique_token), remote: true, :html => { class: "form-horizontal" } do |f| %>
  <div class="form-group m-15 mt-0">
    <%= f.label :stars, "Rating", class: "control-label" %>
    <div>
      <fieldset class="star-rating">
        <%= f.radio_button :stars, 5, required: true %><%= label_tag :client_review_stars_5 %>
        <%= f.radio_button :stars, 4 %><%= label_tag :client_review_stars_4 %>
        <%= f.radio_button :stars, 3 %><%= label_tag :client_review_stars_3 %>
        <%= f.radio_button :stars, 2 %><%= label_tag :client_review_stars_2 %>
        <%= f.radio_button :stars, 1 %><%= label_tag :client_review_stars_1 %>
      </fieldset>
    </div>
  </div>

  <div class="form-group m-15">
    <%= f.label :review, class: "control-label" %>
    <%= f.text_area :review, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group m-15">
    <%= f.label :permission_to_publish, class: "control-label" do %>
      <%= f.check_box :permission_to_publish, class: "mr-5" %> I give permission to publish this review on Top Tutoring.
    <% end %>
  </div>

  <div class="text-center">
    <%= f.submit "Submit Review", class: "btn btn-primary", data: { disable: true } %>
  </div>
<% end %>
