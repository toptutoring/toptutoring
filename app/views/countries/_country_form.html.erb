<%= link_to "ISO code must be a valid ISO-alpha-2 code.", "https://en.wikipedia.org/wiki/ISO_3166-1_alpha-2", target: :blank %> 
<%= form_for @country, :html => { class: "form-horizontal" } do |f| %>
  <div class="col-sm-6">
    <div class="form-group m-5">
      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, class: "form-control", required: "required" %>
    </div>
  </div>

  <div class="col-sm-3">
    <div class="form-group m-5">
      <%= f.label :code, "ISO Code", class: "control-label" %>
      <%= f.text_field :code, class: "form-control", required: "required" %>
    </div>
  </div>

  <div class="col-sm-3 pt-30">
    <div class="text-center">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
  <div class="clearfix"></div>
<% end %>
