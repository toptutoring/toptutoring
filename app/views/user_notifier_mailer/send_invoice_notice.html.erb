  <body yahoofix="true">
    <table border="0" cellpadding="0" cellspacing="0" class="wrapper" width="100%">
      <tbody>
        <tr>
          <td valign="top" width="100%">
            <!--[if (gte mso 9)|(IE)]>
              <table width="600" align="center" cellpadding="0" cellspacing="0" border="0">
              <tr>
              <td>
            <![endif]-->

            <table border="0" cellpadding="0" cellspacing="0" style="min-width:680px;max-width:680px;margin:75px auto;border-collapse:collapse;border-spacing:0;background-color:#fff;color:rgb(51,51,51);border-radius:3px">
              <tbody>
                <tr>
                  <td colspan="3" align="left">
                    <img height="60" src="https://app.toptutoring.com/assets/topTutoringFinal-e2ff8c7932bd9cbe79219aa308ae6160bc477bd8efc4cac3515864cbda6f56bc.png" style="border:none;padding:0;margin:0" alt="Top Tutoring" />
                  </td>
                  <td align="right" style="font-size:32px;font-weight:300;color:rgb(153,153,153)"><p>Summary</p></td>
                </tr>
                <tr height="80">
                  <td style="padding:20px 0;" valign="top">
                    <p style="color:rgb(153,153,153);font-size:18px">Date</p>
                    <p><%= l @invoice.session_date, format: :with_weekday %></p>
                  </td>
                  <td style="padding:20px 0;" valign="top">
                    <p style="color:rgb(153,153,153);font-size:18px">Subject Covered</p>
                    <p><%= @invoice.subject %></p>
                  </td>
                  <td style="padding:20px 0;" valign="top">
                    <p style="color:rgb(153,153,153);font-size:18px">Tutor</p>
                    <p><%= @invoice.submitter.full_name %></p>
                  </td>
                  <td style="padding:20px 0;text-align:right;" valign="top">
                    <p style="color:rgb(153,153,153);font-size:18px">Hours</p>
                    <p><%= @invoice.hours %></p>
                  </td>
                  <!-- <td width="120" align="right" style="padding:20px;border-style:solid;border:1px solid white" valign="top">
                    <p style="color:rgb(153,153,153);font-size:18px"></p>
                    <p style="font-size:16px"><%= %></p> -->
                  </td>
                </tr>
                <tr>
                  <td colspan="4" style="padding:20px 0;border-top:2px solid lightgray">
                    <p style="color:rgb(153,153,153);font-size:18px">Session Summary</p>
                    <p><%= @invoice.description %></p>
                  </td>
                </tr>

                <tr>
                  <td colspan="4" align="right" style="padding-top:60px;font-size:32px;font-weight:300;color:rgb(153,153,153)" height="60"><p>Credit Update</p></td>
                </tr>
                <tr>
                  <td colspan="3" style="padding:20px 0;">
                    <p style="color:rgb(153,153,153);font-size:18px">Previous Balance</p>
                    <p><%= @invoice.hours_type.titlecase + " Hours" %></p>
                  </td>
                  <td style="padding:20px 0;text-align:right;">
                    <p style="color:rgb(153,153,153);font-size:18px">Qty.</p>
                    <p><%= @user.send(@invoice.hours_type + "_credit") + @invoice.hours %> hrs</p>
                  </td>
                </tr>
                <tr>
                  <td colspan="3" style="padding:20px 0;">
                    <p style="color:rgb(153,153,153);font-size:18px">Hours Deducted</p>
                    <p><%= @invoice.hours_type.titlecase + " Hours" %></p>
                  </td>
                  <td style="padding:20px 0;text-align:right;">
                    <p style="color:rgb(153,153,153);font-size:18px">Qty.</p>
                    <p>-<%= @invoice.hours %> hrs</p>
                  </td>
                </tr>
                <tr style="border-top:2px solid lightgray">
                  <td colspan="3" style="padding:20px 0;">
                    <p style="color:rgb(153,153,153);font-size:18px">Current Balance</p>
                    <p><%= @invoice.hours_type.titlecase + " Hours" %></p>
                  </td>
                  <td style="padding:20px 0;text-align:right;">
                    <p style="color:rgb(153,153,153);font-size:18px">Qty.</p>
                    <p><%= @user.send(@invoice.hours_type + "_credit") %> hrs</p>
                  </td>
                </tr>
              </tbody>
            </table>

            <!--[if (gte mso 9)|(IE)]>
              </td>
              </tr>
              </table>
            <![endif]-->
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
