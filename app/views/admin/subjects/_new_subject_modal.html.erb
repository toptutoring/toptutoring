<div id="new_subject_modal" tabindex="-1" role="dialog" aria-labelledby="subjectForm" class="modal fade" style="display: none;">
  <div role="document" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">Ã—</span></button>
        <h4 class="modal-title">New Subject</h3>
      </div>
      <div class="modal-body">
        <%= form_with model: Subject.new, url: admin_subjects_path, local: true, class: "mb-20" do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :category %>
            <%= f.select :category, options_for_select(@category_options), { include_blank: false }, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :academic_type %>
            <%= f.select :academic_type, options_for_select([["Academic", "academic"], ["Test Prep", "test_prep"]]), {}, class: "form-control" %>
          </div>
          <%= f.submit class: "btn btn-primary center-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
