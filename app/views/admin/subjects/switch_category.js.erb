<% if @updated %>
  var subjectConfirm = document.getElementById("cat_confirm_subject_<%= @subject.id %>")
  confirmDialogShow(subjectConfirm);
<% else %>
  var subjectSelect = document.getElementById("select_subject_<%= @subject.id %>")
  subjectSelect.value = "<%= @subject.reload.category %>"
  renderTopTutoringFlashes("<%= j render "application/flashes" %>");
  window.scrollTo(0, 0);
<% end %>
