<%= content_for :head do %>
  <%= javascript_include_tag Ckeditor.cdn_url %>
<% end %>

<div class="col-md-9">
  <h3 class="inline-block mb-12" id="blog-title-display">
    <%= @post.title || "Please add a title" %>
  </h1>

  <div class="p-10 editable" id="blog-content-contenteditable" contenteditable="true">
    <%= raw @post.content || "Please add content" %>
  </div>
</div>

<div class="col-md-3">
  <div class="widget mb16">
    <%= form_for @post, html: { class: "mt-20 mb-20", id: "blog-form" } do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :publish_date %>
        <%= f.text_field :publish_date, id: "datetimepicker4", value: @post.publish_date || Date.current, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :excerpt, "Excerpt (max 140 characters)" %>
        <%= f.text_area :excerpt, maxlength: 140, rows: 5, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :blog_categories %>
        <%= f.fields_for :blog_categories do |cat_field| %>
          <div class="row">
            <% BlogCategory.all.each do |category| %>
              <div class="col-md-4">
                <div class="form-group">
                  <label>
                    <%= check_box_tag "post[categories][]", category.id %>
                    <span><%= category.name %></span>
                  </label>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <%= f.submit class: "center-block btn btn-blue" %>
    <% end %>
  </div>
  <%= link_to "All Posts", blog_posts_path %>
</div>
