<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="widget">
      <div class="widget-heading">
        <h3 class="widget-title text-center">User Profile</h3>
      </div>
      <div class="widget-body">
        <%= form_for(@user, url: admin_user_path(@user)) do |f| %>
          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :phone_number %>
            <%= f.telephone_field :phone_number, class: "form-control" %>
          </div>

          <div class="text-center form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if @user.client_account %>
  <%= render "client_account_form_widget", url: admin_user_path(@user) %>
<% end %>
