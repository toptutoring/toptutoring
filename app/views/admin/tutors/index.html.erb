<div class="row">
  <div class="col-md-12">
    <div class="widget">
      <div class="widget-heading clearfix">
        <h3 class="widget-title pull-left">Tutors</h3>
        <a href="/admin/payments/new" class="btn btn-success" style="margin-left:20px;">Pay tutor</a>
      </div>
      <div class="widget-body">
        <div class="table-responsive">
          <table class="table mb-0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Academic Type</th>
                <th class="text-center">Balance</th>
                <th class="text-center">Hourly Rate</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.tutor.subject %></td>
                  <td><%= user.tutor.academic_type %></td>
                  <td class="text-center"><%= tutor_balance(user)%></td>
                  <td class="text-center"><%= user.tutor.hourly_rate %></td>
                  <% if current_user.admin? || current_user.is_director? %>
                    <td class="text-center">
                      <%= link_to edit_admin_tutor_path(user) do %>
                        <button type="button" class="btn btn-outline btn-success">Edit</button>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
