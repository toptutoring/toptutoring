<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="widget">
      <div class="widget-heading">
        <h3 class="widget-title text-center"><%= @user.name %></h3>
      </div>
      <div class="widget-body">
        <%= form_for(@user, url: admin_tutor_path(@user)) do |f| %>
          <%= f.fields_for :tutor do |tutor_field| %>
            <div class="form-group">
              <%= tutor_field.label :subject %>
              <%= tutor_field.text_field :subject, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= tutor_field.label :academic_type %>
              <%= tutor_field.text_field :academic_type, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= tutor_field.label :hourly_rate %>
              <%= tutor_field.number_field :hourly_rate, class:"form-control", min: "0"%>
            </div>
          <% end %>

          <% if current_user.admin %>
            <div class="form-group">
              <%= f.label :balance %>
              <%= f.number_field :balance, class:"form-control", min: "0"%>
            </div>
          <% end %>

          <div class="text-center">
            <button type="submit" class="btn btn-outline btn-success">Submit</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
