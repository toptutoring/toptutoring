<%= form_for @tutor, url: admin_tutor_path(@tutor), html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control", required: true, placeholder: "Name" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :email, class: "form-control", required: true, placeholder: "Email" %>
    </div>
  </div>

  <%= f.fields_for :tutor_account do |account| %>
    <div class="form-group">
      <%= account.label :online_rate, "Online Rate", class: "col-sm-3 control-label" %>
      <div class="input-group col-sm-9 pl-15 pr-15">
        <div class="input-group-addon">$</div>
        <%= account.number_field :online_rate, class: "form-control", step: 0.01, min: 0 %>
      </div>
    </div>

    <div class="form-group">
      <%= account.label :in_person_rate, "In-Person Rate", class: "col-sm-3 control-label" %>
      <div class="input-group col-sm-9 pl-15 pr-15">
        <div class="input-group-addon">$</div>
        <%= account.number_field :in_person_rate, class: "form-control", step: 0.01, min: 0 %>
      </div>
    </div>
  <% end %>

  <div class="text-center">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
