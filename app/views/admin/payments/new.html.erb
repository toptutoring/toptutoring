<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="widget">
      <div class="widget-heading clearfix">
      </div>
      <div class="widget-body">
        <%= form_for @payment, :url => admin_payments_path(@login), html: {class: "js-form-validation"} do |form| %>
          <div class="form-group">
            <%= form.label :source, "Send from:" %>
            <%= form.select :source,  options_from_collection_for_select(@funding_sources, :id, :name), {}, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :payee_id, "Tutor" %>
            <%= form.select :payee_id, options_from_collection_for_select(@tutors, :id, :name), {}, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :amount, "Amount:" %>
            <div class="input-group">
              <div class="input-group-addon">$</div>
              <%= form.number_field :amount, class: "form-control no-padding", required: true, min: "1" %>
              <div class="input-group-addon">.00</div>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :description, "Description:" %>
            <%= form.text_area :description, class: "form-control", rows: 3, required: true %>
          </div>

          <%= form.hidden_field :payer_id, value: current_user.id %>
        <%= form.submit "Send Payment", class: "btn btn-success margin-top-md center-block", date: {dismiss: "modal"}%>
      <% end %>
      </div>
    </div>
  </div>
</div>
