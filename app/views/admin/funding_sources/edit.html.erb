<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="widget">
      <div class="widget-heading clearfix">
      </div>
      <div class="widget-body">
        <%= form_for @funding_source, url: admin_funding_source_path(@funding_source.id), html: { class: "form-horizontal" } do |form| %>

          <div class="form-group select-option">
            <%= form.label :funding_source_id, "Send from:", class: "col-sm-3 control-label"%>
            <div class="col-sm-9">
              <%= form.select :funding_source_id,  options_from_collection_for_select(@funding_sources, :id, :name, @funding_source.funding_source_id), {}, class:"form-control", required: true %>
            </div>
          </div>

        <%= form.submit "Set Funding source", class: "btn btn-primary margin-top-md center-block", date: { dismiss: "modal" }%>
      <% end %>
      </div>
    </div>
  </div>
</div>
