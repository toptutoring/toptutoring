<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @city] do |f| %>
      <div class="form-group">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "form-control", required: "required" %>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, "Contact Phone Number", class: "control-label" %>
        <%= f.text_field :phone_number, class: "form-control", required: "required" %>
      </div>

      <div class="form-group">
        <%= f.label :address, class: "control-label" %>
        <%= f.text_field :address, class: "form-control", required: "required" %>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :state, class: "control-label" %>
            <%= f.text_field :state, class: "form-control", required: "required" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :zip, class: "control-label" %>
            <%= f.text_field :zip, class: "form-control", required: "required" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group select-option">
            <%= f.label :country_id, class: "control-label" %>
            <%= f.select(:country_id, options_from_collection_for_select(@countries, :id, :name), { include_blank: false }, class: "form-control") %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "control-label" %>
        <%= f.text_area :description, rows: 10, class: "form-control", required: "required" %>
      </div>

      <div class="text-center">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
