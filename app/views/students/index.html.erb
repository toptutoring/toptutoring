<div class="row">
  <div class="col-md-12">
    <div class="widget">
      <div class="widget-heading clearfix">
        <h3 class="widget-title pull-left">Students</h3>
        <%= link_to new_student_path do %>
          <button type="button" class="btn btn-outline btn-primary inline-button">New student</button>
        <% end %>
      </div>
      <div class="widget-body">
        <div class="table-responsive">
          <table class="table mb-0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Tutor</th>
                <th>Subject</th>
              </tr>
            </thead>
            <tbody>
              <% @students.each do |student| %>
                <tr>
                  <td><%= student.name %></td>
                  <td><%= student.email %></td>
                  <td>
                    <% student.student_engagements.each do |engagement| %>
                      <%= engagement&.tutor&.name %>
                    <% end %>
                  </td>
                  <td><%= student.is_student? ? student.client_info&.subject : student.student_info&.subject %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
