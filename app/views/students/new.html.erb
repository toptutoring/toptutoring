<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="widget">
      <div class="widget-heading">
        <h3 class="widget-title text-center">New Student</h3>
      </div>
      <div class="widget-body">
        <%= form_for(@student, url: students_path) do |f| %>

            <div class="form-group">
              <%= f.text_field :name, class:"form-control", required: true, placeholder: "Full Name" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, class:"form-control", required: true, placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%= f.text_field number_to_phone(:phone_number), class:"form-control", placeholder: "Phone Number" %>
            </div>

            <%= f.fields_for :student_info do |student_field| %>
              <div class="form-group">
                <%= student_field.text_field :subject, class:"form-control", required: true, placeholder: "Subject" %>
              </div>
            <% end %>
          <br />
          <div class="text-center">
            <button type="submit" class="btn btn-outline btn-blue">Submit</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
