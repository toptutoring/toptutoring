<div id="card_parameters">
  <div>
    <%= text_field_tag :card_holder_name, "", placeholder: "Cardholder name", class: "form-control input-lg", required: true %>
  </div>

  <div>
    <%= text_field_tag :card_address, "", placeholder: "Billing address", class: "form-control input-lg mt-20", required: true %>
  </div>

  <div class="row">
    <div class="col-xs-4">
      <%= text_field_tag :card_unit_number, "", placeholder: "Apt or Unit #", class: "form-control input-lg mt-20" %>
    </div>

    <div class="col-xs-4">
      <%= text_field_tag :card_city, "", placeholder: "City", class: "form-control input-lg mt-20", required: true %>
    </div>

    <div class="col-xs-4">
      <%= render "card_state_options" %>
    </div>
  </div>

  <div id="card-element" class="form-control input-lg mt-20"></div>
  <h4 id="card-error" class="fw-300 text-right"></h4>

  <div class="form-group text-right">
    <%= label_tag :save_card_information, class: "pl-20" do %>
      <%= check_box_tag :save_card_information, "true", false %>
      Save this card for future use
    <% end %>
  </div>
</div>

<%= javascript_include_tag STRIPE_JS_HOST %>
