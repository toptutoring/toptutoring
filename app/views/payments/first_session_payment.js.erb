//Show the payment form when the pay button is clicked
document.getElementById("payment_section").style.visibility = "visible";
//prefill out the payment form
document.getElementById("amount").value = <%= ((@engagement.tutor.academic_rate_cents/100.0)*(@engagement.invoices.last.hours)) %>.toFixed(2);
document.getElementById("hours").value = <%= @engagement.invoices.last.hours %>;
document.getElementById("payment_description").value = "Payment for <%= @engagement.student_name %>'s first session.";
set_academic_type_dropdown();
document.getElementById("jump_to_payment_section").click();

function set_academic_type_dropdown() {
  var academicTypeDropdown = document.getElementsByClassName("payment-academic-type")[0];
  var event = new Event('change');

  if("<%= @engagement.academic_type %>" == "Academic") {
    academicTypeDropdown.selectedIndex = "0";
    academicTypeDropdown.dispatchEvent(event);
  }
  else {
    academicTypeDropdown.selectedIndex = "1";
    academicTypeDropdown.dispatchEvent(event);
  }
}
