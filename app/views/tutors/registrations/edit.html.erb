<div class="wrapper text-center">
  <%= devise_error_messages! %>
  <h3>Edit tutor information</h3></br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal col-sm-offset-3" }) do |f| %>

  <div class="form-group">
    <%= f.label :name, class:"col-sm-3 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :name, autofocus: true, data: {stripe: "name"}, class:"form-control col-sm-3 input-sm" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class:"col-sm-3 control-label" %>
    <div class="col-sm-3">
      <%= f.email_field :email, autofocus: true, class:"form-control col-sm-3 input-sm" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, class:"col-sm-3 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :phone_number, autofocus: true, class:"form-control col-sm-3 input-sm" %>
    </div>
  </div>

  <br>
    <%= f.fields_for :tutor do |tutor_field| %>

      <div class="form-group">
        <%= tutor_field.label :subject, class:"col-sm-3 control-label" %>
        <div class="col-sm-3">
          <%= tutor_field.text_field :subject, autofocus: true, class:"form-control col-sm-3 input-sm", :required => true %>
        </div>
      </div>

      <div class="form-group">
        <%= tutor_field.label :activity_type, class:"col-sm-3 control-label" %>
        <div class="col-sm-3">
          <%= tutor_field.select :activity_type, Tutor::ACTIVITY_TYPE, {}, class:"form-control", :required => true %>
        </div>
      </div>

    <% end %>

  </br>
  <div class="form-group">
    <%= f.label :password, class:"col-sm-3 control-label" %> <i>(leave blank if you don't want to change it)</i>
    <div class="col-sm-3">
      <%= f.password_field :password, autocomplete: "off", class:"form-control col-sm-3 input-sm"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class:"col-sm-3 control-label" %>
    <div class="col-sm-3">
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control col-sm-3 input-sm" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_password, class:"col-sm-3 control-label" %> <em>(we need your current password to confirm your changes)</em>
    <div class="col-sm-3">
      <%= f.password_field :current_password, autocomplete: "off",  class:"form-control col-sm-3 input-sm" %>
    </div>
  </div>

</br>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <%= f.submit "Update", class:"btn btn-success col-sm-3" %>
  </div>
<% end %>