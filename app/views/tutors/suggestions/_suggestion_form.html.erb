<div class="col-md-6 col-md-offset-3">
  <div class="widget">
    <div class="widget-heading clearfix">
      <h3 class="widget-title text-center">Suggest Hours</h3>
    </div>
    <div class="widget-body">

      <%= form_for [:tutors, @suggestion], :html => { class: "form-horizontal" } do |f| %>

        <p>Suggestion for <%= @engagement.student_name %></p>

        <div class="form-group">
          <label for="suggested_hours" class="col-sm-3 control-label">Hours</label>
          <div class="col-sm-9">
            <input type="number" class="form-control" name="suggestion[hours]" required="required" min="1" max="12" step="0.25" value="<%= @suggestion.hours ? @suggestion.hours : "1.00" %>">
          </div>
        </div>

        <div class="form-group">
          <label for="description" class="col-md-3 col-sm-3 control-label">Description</label>
          <div class="col-sm-9">
            <%= f.text_area :description, rows: 4, class: "form-control", placeholder: "Please give a short description of your suggestion.", required: "required" %>
          </div>
        </div>
        
        <%= hidden_field(:suggestion, :engagement_id) %>
        <div class="text-center">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
