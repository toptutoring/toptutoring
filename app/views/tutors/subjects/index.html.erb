<h1>Your Subjects</h1>
<div class="widget">
  <div class="widget-body">
    <%= form_for @tutor_account, url: tutors_subject_path(@tutor_account) do |f| %>
      <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name do |c| %>
        <div class="custom-checkbox col-lg-4 col-sm-6">
          <%= c.check_box %>
          <%= c.label %>
        </div>
      <% end %>
      <%= f.submit "Submit", class: "btn btn-submit btn-primary mt-15" %>
    <% end %>
  </div>
</div>
