<div class="text-center">

  <h2>Forgot your password?</h2>


  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal col-sm-offset-4" }) do |f| %>

  <div class="sign-up-alert">
    <%= devise_error_messages! %>
  </div>

    <div class="form-group">
      <%= f.label :email, class:"col-sm-2 control-label" %>
      <div class="col-sm-3">
        <%= f.email_field :email, autofocus: true, class:"form-control col-sm-3 input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-1"></div>
      <%= f.submit "Send me reset password instructions", class:"btn btn-success col-sm-4" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
