<div class="text-center">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal col-sm-offset-4"}) do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, class:"col-sm-2 control-label" %>
      <div class="col-sm-3">
        <%= f.email_field :email, autofocus: true, class:"form-control col-sm-3 input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class:"col-sm-2 control-label" %>
      <div class="col-sm-3">
        <%= f.password_field :password, autocomplete: "off", class:"form-control col-sm-3 input-sm" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="col-sm-2 col-sm-offset-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>

    <div class="form-group">
      <div class="col-sm-2"></div>
      <%= f.submit "Log in", class:"btn btn-success col-sm-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
