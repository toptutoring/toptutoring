<h1>Cities</h1>
<div class="row m-30">
  <div class="widget p-20">
    <div class="widget-body">
      <%= link_to "Add a City", new_city_path, class: "btn btn-blue" %>
      <%= link_to "Add a Country", new_country_path, class: "btn btn-primary" %>
      <div class="table-responsive">
        <table class="table mb-0 table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>State</th>
              <th>Country</th>
              <th>Contact Phone Number</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @cities.each do |city| %>
              <tr>
                <td><%= city.name %></td>
                <td><%= city.state %></td>
                <td><%= city.country.name %></td>
                <td><%= Phonelib.parse(city.phone_number, city.country.code).national %></td>
                <td>
                  <%= link_to "Edit", edit_city_path(city), class: "btn btn-primary" %>
                  <%= link_to "Destroy", city_path(city), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to remove this city?" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
