<% order = local_assigns.fetch(:order, "asc") %>
<%= content_for :javascripts do %>
  <%= javascript_include_tag '/plugins/datatables.net/js/jquery.dataTables.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net/js/jquery.dataTables.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-bs/js/dataTables.bootstrap.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-buttons/js/dataTables.buttons.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-buttons-bs/js/buttons.bootstrap.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-buttons/js/buttons.colVis.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-buttons/js/buttons.print.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-buttons/js/buttons.html5.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-colreorder/js/dataTables.colReorder.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-keytable/js/dataTables.keyTable.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-select/js/dataTables.select.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-responsive/js/dataTables.responsive.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-responsive-bs/js/responsive.bootstrap.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-fixedcolumns/js/dataTables.fixedColumns.min.js' %>
  <%= javascript_include_tag '/plugins/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js' %>

  <script>
    $(document).ready(function() {
      $('#<%= table_id %>').DataTable({
        fixedHeader: true,
        order:[0, "<%= order %>"]
      });
    });
  </script>
<% end %>

<%= content_for :head do %>
  <%= stylesheet_link_tag '/plugins/datatables.net-bs/css/dataTables.bootstrap.min.css' %>
  <%= stylesheet_link_tag '/plugins/datatables.net-buttons-bs/css/buttons.bootstrap.min.css' %>
  <%= stylesheet_link_tag '/plugins/datatables.net-colreorder-bs/css/colReorder.bootstrap.min.css' %>
  <%= stylesheet_link_tag '/plugins/datatables.net-keytable-bs/css/keyTable.bootstrap.min.css' %>
  <%= stylesheet_link_tag '/plugins/datatables.net-select-bs/css/select.bootstrap.min.css' %>
  <%= stylesheet_link_tag '/plugins/datatables.net-responsive-bs/css/responsive.bootstrap.min.css' %>
  <%= stylesheet_link_tag '/plugins/datatables.net-fixedcolumns-bs/css/fixedColumns.bootstrap.min.css' %>
  <%= stylesheet_link_tag '/plugins/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css' %>
<% end %>
