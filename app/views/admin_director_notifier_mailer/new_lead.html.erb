<% content_for(:title) { "New Lead" } %>

<%= render layout: "layouts/mailers/standard" do %>
  <p>Hello,</p>
  <br/>
  <p>We are writing to let you know that <%= @lead.full_name %> left their contact. <%= @lead.full_name %> may be contacted at <%= phone_number_display @lead %> or by email: <%= @lead.email %>.</p>
  <br/>
  <p><strong>Email:</strong> <%= @lead.email %></p>
  <p><strong>Phone:</strong> <%= phone_number_display @lead %></p>
  <p><strong>Subject:</strong> <%= @lead.subject.name %></p>
  <p><strong>Comments:</strong> <%= @lead.comments %></p>
  <br/>
  <p>Regards,</p>
  <p>Top Tutoring</p>
<% end %>
