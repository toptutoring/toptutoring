<div class="page-content container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="widget">
        <div class="widget-heading clearfix">
          <h3 class="widget-title pull-left">Assignments</h3>
        </div>
        <div class="widget-body">
          <div class="table-responsive">
            <table class="table mb-0">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Student</th>
                  <th>Tutor</th>
                  <th>Subject</th>
                  <th class="text-center">Academic Type</th>
                  <th class="text-center">Hourly Rate</th>
                  <th class="text-center">Status</th>
                  <th class="text-center"></th>
                </tr>
              </thead>
              <tbody>
                <% @assignments.each do |assignment|
                  representer = AssignmentPresenter.new(assignment) %>
                  <tr>
                    <td><%= representer.id %></td>
                    <td><%= representer.student_name %></td>
                    <td><%= representer.tutor_name %></td>
                    <td><%= representer.subject %></td>
                    <td class="text-center"><%= representer.academic_type %></td>
                    <td class="text-center"><%= "$#{representer.hourly_rate}" if representer.hourly_rate %></td>
                    <td class="text-center"><span class="label label-outline label-warning"><%= representer.state %></span></td>
                    <td class="text-center">
                      <%= link_to edit_assignment_path(representer.id) do %>
                        <button type="button" class="btn btn-outline btn-success">Edit</button>
                      <% end %>
                    </td>
                    <% if representer.updated? && representer.pending? %>
                      <td class="text-center">
                        <%= link_to enable_assignment_path(representer) do %>
                          <button type="button" class="btn btn-outline btn-primary">Enable</button>
                        <% end %>
                      </td>
                    <% elsif representer.active? %>
                      <td class="text-center">
                        <%= link_to disable_assignment_path(representer.id) do %>
                          <button type="button" class="btn btn-outline btn-danger">Disable</button>
                        <% end %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
