<div class="row">
  <div class="col-md-12">
    <div class="widget">

      <div class="widget-heading clearfix">
        <h3 class="widget-title pull-left">Clients</h3>
      </div>

      <div class="widget-body">
        <div class="table-responsive">
          <table id="admin-user-table" style="width: 100%" class="table table-hover dt-responsive nowrap">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Access State</th>
                  <th>Academic Rate</th>
                  <th>Test Prep Rate</th>
                  <th>Academic Credit</th>
                  <th>Test Prep Credit</th>
                  <th>Action</th>
                  <th>Masquerade</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><a href="javascript:;"><%= user.id %></a></td>
                    <td>
                      <div class="media">
                        <div class="media-body">
                          <h5 class="media-heading"><%= user.name.humanize %></h5>
                          <p class="text-muted mb-0"><%= cleanup_phone_number(user.phone_number) %></p>
                          <p class="text-muted mb-0"><%= user.email.downcase %></p>
                        </div>
                      </div>
                    </td>
                    <td><%= user.access_state %></td>
                    <td><%= number_to_currency(user.academic_rate) %></td>
                    <td><%= number_to_currency(user.test_prep_rate) %></td>
                    <td><%= user.academic_credit.to_s + " hrs" %></td>
                    <td><%= user.test_prep_credit.to_s + " hrs" %></td>
                    <td>
                      <%= link_to "Adjust Rates and Balances", edit_director_user_path(user), class: "btn btn-outline btn-success btn-sm" %>
                    </td>
                    <td>
                      <%= render 'shared/masquerade_start_button', user: user %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
