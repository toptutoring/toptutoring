<div class="col-md-6 center-block">
<%= form_for current_user, url: { action: "profile_edit" }, html: { class: "form-horizontal" } do |f| %>

  <div class ="form-group">
    <div class ="col-lg-4">
    <%= label_tag(:name, "Name", class: "pull-right control-label") %>
    </div>
    <div class="col-lg-8">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class ="form-group">
    <div class ="col-lg-4">
    <%= label_tag(:phone_number, "Phone Number", class: "pull-right control-label") %>
    </div>
    <div class="col-lg-8">
    <%= f.text_field :phone_number %>
    </div>
  </div>

  <div class ="form-group">
    <div class ="col-lg-4">
    <%= label_tag(:email, "Email", class: "pull-right control-label") %>
    </div>
    <div class="col-lg-8">
    <%= f.text_field :email %>
    </div>
  </div>


  <%= f.submit "Submit", class: "btn btn-outline btn-success" %>
<% end %>
</div>
