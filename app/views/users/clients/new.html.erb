<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-5">
        <h4 class="uppercase">Sign Up</h4>
        <p> Already have an account?
          <%= link_to "Sign in", sign_in_path %>
        </p>
        <%= image_tag("yellownotebook.jpg", class: "contact-us-image") %>
        <p>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;<br><br></p>
      </div>
      <div class="col-sm-6 col-md-6 col-md-offset-1">
        <div class="col-md-12">
          <p class="note text-center">
            Who is this tutoring for?
          </p>
        </div>
        <%= form_for @user, url: users_clients_path(@user), html: { class: "signup-form" } do |form| %>

          <%= form.fields_for :client_info do |client_field| %>
            <div class="col-md-2 col-md-offset-2">
              <%= client_field.radio_button :tutoring_for, 0 %>
              <%= label :tutoring_info_myself, 'Myself' %>
            </div>
            <div class="col-md-5 col-md-offset-2">
              <%= client_field.radio_button :tutoring_for, 1 %>
              <%= label :tutoring_info_someone_else, 'Someone else (My child)' %>
            </div>
            </br></br>
          <% end %>

          <div class="col-md-12">
            <%= form.text_field :name, type: "text", placeholder: "Full Name" %>
          </div>

          <div class="col-md-12">
            <%= form.email_field :email, type: "text", placeholder: "Your Email" %>
          </div>

          <%= form.fields_for :client_info do |client_field| %>
            <div class="col-md-12">
              <%= client_field.text_field :subject, placeholder: "Tutoring Subject" %>
            </div>
          <% end %>

          <div class="col-md-12">
            <%= form.password_field :password, placeholder: "Password" %>
          </div>

          <div class="col-md-12">
            <button type="submit" class="btn btn-lg btn-blue">Sign up</button>
          </div>

          <div class="col-md-12">
            <p class="note text-center">
              By signing up, you agree to our terms of services and privacy policy.
            </p>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</section>
