<%= form_for @user, url: users_tutors_path(@user), html: { class: "signup-form", id: "tutor-signup" } do |f| %>
  <div class="col-md-12">
    <%= f.text_field :name, type: "text", placeholder: "FULL NAME", required: true %>
  </div>

  <div class="col-md-12">
    <%= f.email_field :email, type: "text", placeholder: "YOUR EMAIL", required: true %>
  </div>

  <div class="col-md-12">
    <%= f.password_field :password, placeholder: "PASSWORD", required: true %>
  </div>

  <%= f.fields_for :contract do |contract| %>
    <div class="col-md-12">
      <%= contract.number_field :hourly_rate, type: "text", placeholder: "Hourly Rate", required: true %>
    </div>
  <% end %>

  <div class="col-md-12">
    <%= f.submit "Sign up", class: "btn btn-lg btn-blue" %>
  </div>
<% end %>
