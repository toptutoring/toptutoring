  <h2>Please take a moment to select what subjects you will be tutoring</h2>
  <fieldset>
    <%= f.fields_for :subject do |subject_field| %>
      <div class="row">
        <% Subject.all.each do |subject| %>
        <div class="col-md-4">
          <div class="form-group">
              <label>
                <%= check_box_tag "tutor[subjects][]", subject.id, false, id: "tutor_subject_#{subject.id}" %>
                <span><%= subject.name %></span>
              </label>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </fieldset>
