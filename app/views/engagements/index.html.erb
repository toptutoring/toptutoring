<%= render "layouts/page_widget", title: "Engagements", heading_html: link_to("Add a new engagement", new_engagement_path, class: "pull-right btn") do %>
  <div class="table-responsive">
    <table class="table mb-0">
      <thead>
        <tr>
          <th>Student</th>
          <th>Tutor</th>
          <th>Subject</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @engagements %>
        <%= render partial: "engagement", collection: @archived_engagements %>
      </tbody>
    </table>
  </div>
<% end %>
