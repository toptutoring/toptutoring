<section>
  <div class="container">
    <div class="row mt-30 mb-30">
      <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
        <div class="widget border-blue mt-30 mb-30">
          <div class="widget-heading mb-15">
            <h3 class="widget-title text-blue">Sign In</h3>
          </div>
          <div class="widget-body pt-30 pb-30">
            <%= form_for :session, url: session_path do |form| %>
              <%= form.label :email, class: "sr-only"  %>
              <%= form.email_field :email, type: "email", value: @user_email, placeholder: "Email" %>

              <%= form.label :password, class: "sr-only"  %>
              <%= form.password_field :password, type: "password", placeholder: "Password" %>

              <%= form.label :remember_me, class: "remember-me inline-block form-control-static" do %>
                <%= form.check_box :remember_me %>
                Remember me
              <% end %>
              <%= link_to "Trouble signing in?", reset_password_path, class: "pull-right inline-block form-control-static" %>


              <%= form.submit "Login", class: "btn btn-lg btn-blue" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</section>
